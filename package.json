{
  "name": "electron-react-boilerplate",
  "version": "0.0.1",
  "description": "Electron React Boilerplate",
  "main": "main.js",
  "scripts": {
    "start": "gulp start:dev",
    "serve": "gulp serve",
    "release": "gulp release"
  },
  "repository": "https://github.com/oxyno-zeta/electron-react-boilerplate",
  "keywords": [
    "Electron",
    "React",
    "Boilerplate"
  ],
  "author": {
    "name": "Havrileck Alexandre",
    "email": "oxynozeta.oz@gmail.com",
    "url": "https://github.com/oxyno-zeta"
  },
  "license": "See Licence.md",
  "build": {
    "appId": "org.oxynozeta.boilerplate",
    "category": "public.app-category.tools",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "views/",
      "node_modules/",
      "main.js",
      "package.json",
      "LICENSE.md"
    ],
    "win": {
      "target": [
        "nsis",
        "squirrel",
        "zip"
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/oxyno-zeta/electron-react-boilerplate/blob/master/resources/icon.ico?raw=true"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage",
        "rpm",
        "freebsd",
        "tar.gz"
      ]
    }
  },
  "directories": {
    "buildResources": "resources",
    "output": ".tmp"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.4",
    "babel-core": "^6.18.2",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "css-loader": "^2.1.0",
    "del": "^3.0.0",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "electron-prebuilt": "^1.4.13",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^3.0.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-bump": "^3.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.2",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "ps-tree": "^1.1.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.3",
    "run-sequence": "^2.2.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.3",
    "webpack-combine-loaders": "^2.0.3",
    "webpack-dev-server": "^3.1.14"
  }
}
